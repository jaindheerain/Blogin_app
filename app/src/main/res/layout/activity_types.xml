<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="2"
        android:padding="10dp"
        >

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_column="0"
            android:padding="4dp"
            app:srcCompat="@mipmap/entertainment" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_column="1"
            android:padding="4dp"
            app:srcCompat="@mipmap/lifestyle" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:padding="4dp"
            app:layout_column="1"
            app:srcCompat="@mipmap/tehcnology" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:layout_column="0"
            android:padding="4dp"
            app:srcCompat="@mipmap/news" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:padding="4dp"
            app:layout_column="1"
            app:srcCompat="@mipmap/story" />

        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:padding="4dp"
            app:layout_column="0"
            app:srcCompat="@mipmap/photography" />
    </android.support.v7.widget.GridLayout>
</ScrollView>
</LinearLayout>